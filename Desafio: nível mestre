#include <stdio.h>
#include <string.h>

int main() {
    // Dados da Carta 1
    char nomeCidade1[50] = "Cidade Alpha";
    int populacao1 = 1000000;
    float area1 = 500.0;
    float pib1 = 120.0;
    int pontosTuristicos1 = 15;
    float densidade1 = populacao1 / area1;

    // Dados da Carta 2
    char nomeCidade2[50] = "Cidade Beta";
    int populacao2 = 800000;
    float area2 = 400.0;
    float pib2 = 100.0;
    int pontosTuristicos2 = 20;
    float densidade2 = populacao2 / area2;

    int atributo1, atributo2;
    float valor1_carta1, valor1_carta2;
    float valor2_carta1, valor2_carta2;
    float soma1, soma2;

    // Menu para escolha do primeiro atributo
    printf("SUPER TRUNFO - COMPARAÇÃO AVANÇADA\n");
    printf("Escolha o primeiro atributo:\n");
    printf("1 - População\n");
    printf("2 - Área\n");
    printf("3 - PIB\n");
    printf("4 - Pontos Turísticos\n");
    printf("5 - Densidade Demográfica\n");
    printf("Digite sua opção: ");
    scanf("%d", &atributo1);

    // Menu dinâmico para o segundo atributo
    printf("\nEscolha o segundo atributo (diferente do primeiro):\n");
    for (int i = 1; i <= 5; i++) {
        if (i != atributo1) {
            switch (i) {
                case 1: printf("1 - População\n"); break;
                case 2: printf("2 - Área\n"); break;
                case 3: printf("3 - PIB\n"); break;
                case 4: printf("4 - Pontos Turísticos\n"); break;
                case 5: printf("5 - Densidade Demográfica\n"); break;
            }
        }
    }
    printf("Digite sua opção: ");
    scanf("%d", &atributo2);

    // Validação
    if (atributo1 == atributo2 || atributo1 < 1 || atributo1 > 5 || atributo2 < 1 || atributo2 > 5) {
        printf("\nErro: atributos inválidos ou repetidos. Reinicie o programa.\n");
        return 1;
    }

    // Atribuição dos valores
    valor1_carta1 = (atributo1 == 1) ? populacao1:
                    (atributo1 == 2) ? area1:
                    (atributo1 == 3) ? pib1:
                    (atributo1 == 4) ? pontosTuristicos1: densidade1;

    valor1_carta2 = (atributo1 == 1) ? populacao2:
                    (atributo1 == 2) ? area2:
                    (atributo1 == 3) ? pib2:
                    (atributo1 == 4) ? pontosTuristicos2 : densidade2;

    valor2_carta1 = (atributo2 == 1) ? populacao1:
                    (atributo2 == 2) ? area1:
                    (atributo2 == 3) ? pib1:
                    (atributo2 == 4) ? pontosTuristicos1: densidade1;

    valor2_carta2 = (atributo2 == 1) ? populacao2:
                    (atributo2 == 2) ? area2:
                    (atributo2 == 3) ? pib2:
                    (atributo2 == 4) ? pontosTuristicos2: densidade2;

    // Exibição dos valores
    printf("\nComparando %s e %s...\n", nomeCidade1, nomeCidade2);
    printf("Atributo 1: %s\n", (atributo1 == 1) ? "População" :
                                 (atributo1 == 2) ? "Área" :
                                 (atributo1 == 3) ? "PIB" :
                                 (atributo1 == 4) ? "Pontos Turísticos" : "Densidade Demográfica");

    printf("%s: %.2f\n", nomeCidade1, valor1_carta1);
    printf("%s: %.2f\n", nomeCidade2, valor1_carta2);

    printf("Atributo 2: %s\n", (atributo2 == 1) ? "População" :
                                 (atributo2 == 2) ? "Área" :
                                 (atributo2 == 3) ? "PIB" :
                                 (atributo2 == 4) ? "Pontos Turísticos" : "Densidade Demográfica");

    printf("%s: %.2f\n", nomeCidade1, valor2_carta1);
    printf("%s: %.2f\n", nomeCidade2, valor2_carta2);

    // Comparações individuais
    printf("\nResultado das Comparações Individuais:\n");

    if (atributo1 == 5) {
        printf("Atributo 1 (menor vence): %s\n", (valor1_carta1 < valor1_carta2) ? nomeCidade1 :
                                                   (valor1_carta2 < valor1_carta1) ? nomeCidade2 : "Empate!");
    } else {
        printf("Atributo 1 (maior vence): %s\n", (valor1_carta1 > valor1_carta2) ? nomeCidade1 :
                                                   (valor1_carta2 > valor1_carta1) ? nomeCidade2 : "Empate!");
    }

    if (atributo2 == 5) {
        printf("Atributo 2 (menor vence): %s\n", (valor2_carta1 < valor2_carta2) ? nomeCidade1 :
                                                   (valor2_carta2 < valor2_carta1) ? nomeCidade2 : "Empate!");
    } else {
        printf("Atributo 2 (maior vence): %s\n", (valor2_carta1 > valor2_carta2) ? nomeCidade1 :
                                                   (valor2_carta2 > valor2_carta1) ? nomeCidade2 : "Empate!");
    }

    // Soma dos atributos
    soma1 = valor1_carta1 + valor2_carta1;
    soma2 = valor1_carta2 + valor2_carta2;

    printf("\nSoma dos Atributos:\n");
    printf("%s: %.2f\n", nomeCidade1, soma1);
    printf("%s: %.2f\n", nomeCidade2, soma2);

    printf("Resultado Final: %s\n", (soma1 > soma2) ? nomeCidade1 :
     (soma2 > soma1) ? nomeCidade2 : "Empate!");

    return 0;
}
